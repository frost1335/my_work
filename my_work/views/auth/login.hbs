<div class="auth">

  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Log in</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if errorLogin}}
        <p class="alert">{{errorLogin}}</p>
      {{/if}}
      <h1>Log in to shop</h1>
      <div class="row">
        <form action="/auth/login" method="POST">
          <div class="input-field col s12">
            <input
              id="email"
              type="email"
              class="validate"
              name="email"
              required
            />
            <label for="email">Email</label>
            <span class="helper-text" data-error="write email"></span>
          </div>
          <div class="input-field col s12">
            <input
              id="password"
              type="password"
              name="password"
              class="validate"
              required
            />
            <label for="password">Password</label>
            <span class="helper-text" data-error="write password"></span>
          </div>
          <button type="submit" class="btn btn-primary">Login</button>

          <p><a href="/auth/reset">Forgot password ?</a></p>
          <input type="hidden" name="_csrf" value="{{csrf}}" />
        </form>
      </div>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if errorRegister}}
        <p class="alert">{{errorRegister}}</p>
      {{/if}}
      <h1>Register to shop</h1>
      <div class="row">
        <form action="/auth/register" method="POST" novalidate>
          <div class="input-field col s12">
            <input
              id="remail"
              type="email"
              class="validate"
              name="email"
              required
            />
            <label for="remail">Email</label>
            <span class="helper-text" data-error="write email"></span>
          </div>
          <div class="input-field col s12">
            <input
              id="rpassword"
              type="password"
              name="password"
              class="validate"
              required
            />
            <label for="rpassword">Password</label>
            <span class="helper-text" data-error="write password"></span>
          </div>
          <div class="input-field col s12">
            <input
              id="confirm"
              type="password"
              name="confirm"
              class="validate"
              required
            />
            <label for="confirm">confirm password</label>
            <span class="helper-text" data-error="write password"></span>
          </div>
          <div class="input-field col s12">
            <input
              id="name"
              type="text"
              name="name"
              class="validate"
              required
            />
            <label for="name">name</label>
            <span class="helper-text" data-error="write name"></span>
          </div>
          <button type="submit" class="btn btn-primary">Register</button>
          <input type="hidden" name="_csrf" value="{{csrf}}" />
        </form>
      </div>

    </div>
  </div>

</div>