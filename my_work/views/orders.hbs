<h1>My oreders</h1>

{{#if orders.length}}
  {{#each orders}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              order - 
              <small>{{_id}}</small>
            </span>
            <p class="date">{{date}}</p>
            <p><em>{{user.userId.name}}</em> {{user.userId.email}} </p>
            <ol>
              {{#each houses}}
                <li>
                  {{house.adress}}
                  (x
                  <strong>{{count}}</strong>)
                  <p>rooms: <span>{{house.room}}</span></p>
                  <p>floor: <span>{{house.floor}}</span></p>
                </li>
              {{/each}}
            </ol>

            <hr />

            <p>Price: <span class="price">{{price}}</span></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>not found orders</p>
{{/if}}