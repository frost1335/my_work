<h1>Profile</h1>

<div class="row">
  <div class="col s6">
    {{#if user.avatarUrl}}
      <img
        class="avatar"
        src="/images/{{user.avatarUrl}}"
        alt="avatar-{{user.name}}"
      />
    {{else}}
      <p>Avatar is not defined !</p>
    {{/if}}
  </div>

  <div class="col s6">
    <form
      action="/profile?_csrf={{csrf}}"
      method="POST"
      enctype="multipart/form-data"
    >
      <p>Your email: <strong>{{user.email}}</strong></p>

      <div class="input-field col s12">
        <input
          id="name"
          type="text"
          class="validate"
          name="name"
          value="{{user.name}}"
          required
        />
        <label for="name">Name</label>
        <span class="helper-text" data-error="write name"></span>
      </div>

      <div class="file-field input-field" style="margin-top: 100px;">
        <div class="btn">
          <span>Avatar</span>
          <input type="file" name="avatar" id="avatar" />
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" />
        </div>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}" />
      <button type="submit" class="btn">Edit</button>
    </form>
  </div>
</div>